<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.aau.serg.cluedo.RollingDice">

    <Button
        android:id="@+id/button_roll_dice"
        android:layout_width="132dp"
        android:layout_height="48dp"
        android:layout_marginStart="379dp"
        android:layout_marginTop="243dp"
        android:layout_marginEnd="380dp"
        android:layout_marginBottom="120dp"
        android:text="Roll Dice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_number"
        android:layout_width="134dp"
        android:layout_height="27dp"
        android:layout_marginStart="306dp"
        android:layout_marginTop="178dp"
        android:layout_marginEnd="452dp"
        android:layout_marginBottom="38dp"
        android:text="The number rolled:"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/button_roll_dice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_dice_result"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="178dp"
        android:layout_marginEnd="380dp"
        android:layout_marginBottom="38dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/button_roll_dice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_number"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>